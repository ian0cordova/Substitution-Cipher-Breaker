<Page
    x:Class="CipherBreakerUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CipherBreakerUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="mainGrid" Background="#8764b8">
        <!-- Main Header -->
        <TextBlock 
            x:Name="tbHeader"
            Text="Subsitution Cipher Breaker"
            FontSize="48"
            Margin="84,44,0,31"
            FontWeight="SemiBold"
            HorizontalAlignment="Left" Width="608" >
        </TextBlock>
        <!-- Navigate to cipher creator page -->
        <Button 
            Content="Create a cipher." 
            Click="NavigateToCipherPage_Click"
            FontSize="24"
            Background="LightGray"
            HorizontalAlignment="Left" 
            Margin="84,175,0,0" 
            VerticalAlignment="Top"/>
        <!-- Navigate to decipher page -->
        <Button 
            Content="Decipher text." 
            Click="NavigateToDecipherPage_Click"
            FontSize="24"
            HorizontalAlignment="Left" 
            Background="LightGray"
            Margin="84,260,0,0" 
            VerticalAlignment="Top" />
    </Grid>
</Page>
